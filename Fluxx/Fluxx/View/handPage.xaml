<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
        NavigationPage.HasNavigationBar="False"
        xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Fluxx.View.handPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Mano" HorizontalOptions="CenterAndExpand"/>
            <ListView x:Name="handListView"
                      ItemSelected="handListView_ItemSelected"
                      ItemTapped="handListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding Nametype}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="Meta" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="GoalName" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>